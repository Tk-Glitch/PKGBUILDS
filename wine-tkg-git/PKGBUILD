function exit_cleanup {
  rm -fv "$_where"/BIG_UGLY_FROGMINER # state tracker end

if [ $_NUKR == "true" ]; then
  # Sanitization
  rm -rf "$srcdir"/$_esyncsrcdir
  rm -rf "$srcdir"/*.patch
  rm -rf "$srcdir"/*.tgz
  rm -rf "$srcdir"/*.conf
  msg2 'exit cleanup done'
fi

  # Remove temporarily copied patches
  rm -rf "$_where"/*.patch
  rm -rf "$_where"/*.conf

  remove_deps
}

trap exit_cleanup EXIT
